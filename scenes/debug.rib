Display "out/debug.tif" "tiff" "rgba"
Projection "perspective" "fov" [21.831]
Format 640 480 1

Option "searchpath"
    "shader" "shaders:@"
    "texture" "lib:@"

Translate 0 -1.207 14.142
Rotate 59.036 0 1 0
Rotate -26.565 6 0 10
Rotate 180 0 1 0

WorldBegin
    
    
    
    Color 1 1 1
    Surface "debug_rtx"

    # Floor.
    TransformBegin
        Rotate 90 1 0 0
        Disk 0 3 360
    TransformEnd

    # Lower spheres.
    TransformBegin
        Translate 1 1 1
        Sphere 1 -1 1 360
    TransformEnd
    TransformBegin
        Translate 1 1 -1
        Sphere 1 -1 1 360
    TransformEnd
    TransformBegin
        Translate -1 1 1
        Sphere 1 -1 1 360
    TransformEnd
    TransformBegin
        Translate -1 1 -1
        Sphere 1 -1 1 360
    TransformEnd
    
    # Upper sphere.
    TransformBegin
        Translate 0 2.4142135 0
        Sphere 1 -1 1 360
    TransformEnd


WorldEnd
